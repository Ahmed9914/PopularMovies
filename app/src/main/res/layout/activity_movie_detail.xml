<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="nanodegree.udacity.popularmovies.MovieDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Poster -->
        <ImageView
            android:id="@+id/poster_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textStyle="bold"
                android:padding="4dp"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Avatar"
                style="@style/Base.TextAppearance.AppCompat.Body1"/>
        </LinearLayout>

        <!-- Release date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release date:"
                android:textStyle="bold"
                android:padding="4dp"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>

            <TextView
                android:id="@+id/release_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1/1/2001"
                style="@style/Base.TextAppearance.AppCompat.Body1"/>
        </LinearLayout>

        <!-- Votes average -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Votes average:"
                android:textStyle="bold"
                android:padding="4dp"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>

            <TextView
                android:id="@+id/votes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="8.2"
                style="@style/Base.TextAppearance.AppCompat.Body1"/>
        </LinearLayout>

        <!-- Overview -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview:"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>

            <TextView
                android:id="@+id/overview_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                tools:text="This is a long text"
                style="@style/Base.TextAppearance.AppCompat.Body1"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
